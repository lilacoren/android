<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/subwaybackground"
    android:gravity="right"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_centerVertical="true"
    tools:context=".HandleCodeRead" >

    <RelativeLayout
        android:id ="@+id/handleCodeReadLayout"
        android:layout_width="350dp"
        android:layout_height="550dp"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/back" >

        <ImageView
            android:id="@+id/digipassLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/digipass_logo" />

        <TextView
            android:id="@+id/LineDescriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/digipassLogo"
            android:layout_centerHorizontal="true"
            android:text="@string/lineDetailsText"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/routeNumber"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignTop="@+id/CompanyIcon"
            android:layout_centerHorizontal="true"
            android:src="@drawable/number434" />

        <ImageView
            android:id="@+id/CompanyIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/LineDescriptionTextView"
            android:layout_marginRight="5dp"
            android:layout_marginTop="18dp"
            android:layout_toLeftOf="@+id/routeNumber"
            android:src="@drawable/icon_egged" />

        <ImageView
            android:id="@+id/routeDescription"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignTop="@+id/routeNumber"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/routeNumber"
            android:src="@drawable/route434description" />

        <ImageView
            android:id="@+id/price_rect"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/CompanyIcon"
            android:layout_below="@+id/routeNumber"
            android:layout_marginTop="18dp"
            android:src="@drawable/city_rect" />

        <ImageView
            android:id="@+id/inner_city_rect"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/price_rect"
            android:layout_below="@+id/price_rect"
            android:layout_marginTop="5dp"
            android:src="@drawable/inner_city_rect" />

        <ImageView
            android:id="@+id/last_stop_rect"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_alignRight="@+id/inner_city_rect"
            android:layout_below="@+id/inner_city_rect"
            android:layout_marginTop="5dp"
            android:src="@drawable/last_stop_rect" />

        <ImageView
            android:id="@+id/price_tag_price"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:layout_above="@+id/inner_city_rect"
            android:layout_alignLeft="@+id/routeDescription"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/price_rect"
            android:src="@drawable/price_ten_n_half" />

        <ImageView
            android:id="@+id/inner_city_price"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:layout_above="@+id/last_stop_rect"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/inner_city_rect"
            android:src="@drawable/price_22_n_half" />

        <ImageView
            android:id="@+id/last_stop_price"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/last_stop_rect"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/last_stop_rect"
            android:src="@drawable/price_22_n_half" />

        <Button
            android:id="@+id/confirm_ride_button"
            android:layout_width="248dp"
            android:layout_height="40dp"
            android:layout_alignRight="@+id/last_stop_price"
            android:layout_below="@+id/last_stop_rect"
            android:layout_marginTop="15dp"
            android:background="@drawable/blue_background"
            android:text="@string/confirm_ride_button_text"
            android:textColor="@color/White"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/slogan_after_read_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/confirm_ride_button"
            android:src="@drawable/slogan" />
    </RelativeLayout>

</RelativeLayout>